{
  "connection": "default",
  "collectionName": "news",
  "info": {
    "name": "news",
    "description": "News relating to NULS and related areas."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "active": {
      "type": "boolean"
    },
    "featured": {
      "type": "boolean"
    },
    "serialNumber": {
      "unique": true,
      "type": "integer"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "en_title": {
      "type": "string",
      "required": true
    },
    "en_description": {
      "maxLength": 200,
      "type": "text",
      "required": true
    },
    "en_content": {
      "type": "text",
      "required": true
    },
    "zh_title": {
      "type": "string"
    },
    "zh_description": {
      "maxLength": 200,
      "type": "text"
    },
    "zh_content": {
      "type": "text"
    },
    "scheduledPublish": {
      "type": "date"
    }
  }
}
